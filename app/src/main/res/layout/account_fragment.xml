<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".ui.fragments.AccountFragment"
    android:background="@color/colorAccent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:src="@drawable/default_profile_picture"
        android:id="@+id/account_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/account_name_text_view"
                android:textSize="18sp"
                android:text="Account name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account_rank_text_view"
                android:text="rank 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/gps_image_view"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_gps_fixed_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/places_number_text_view"
            android:layout_marginLeft="5dp"
            android:textSize="32sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/settings_image_view"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</FrameLayout>