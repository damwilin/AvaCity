<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="3dp"
    tools:context=".ui.fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/account_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_profile_picture" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account name"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/account_rank_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rank 0"
                android:textColor="@color/text_black" />
        </LinearLayout>

        <ImageView
            android:id="@+id/gps_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_gps_fixed_black_24dp" />

        <TextView
            android:id="@+id/places_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/text_black"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/settings_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_settings_black_24dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>